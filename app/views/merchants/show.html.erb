<h1>Greetings</h1>
<ul id="merchant-<%= @merchant.id %>-info">
  <li>Name: <%= @merchant.name %></li>
  <li>E-Mail: <%= @merchant.email %></li>
  <li>Address: <%= @merchant.address %></li>
  <li>City: <%= @merchant.city %></li>
  <li>State: <%= @merchant.state %></li>
  <li>Zip: <%= @merchant.zip %></li>
</ul>
<h2>Current Pending Orders</h2>
<ul id="pending-orders">
  <% @order_items.each do |order_item| %>
  <li>Order ID: <%= link_to order_item.id %></li>
  <li>Date Ordered: <%= order_item.created_at %></li>
  <li>Quantity: <%= order_item.quantity %></li>
  <li>Total Cost: <%= '%.2f' % order_item.total_cost %></li>
</ul>
<% end %>
